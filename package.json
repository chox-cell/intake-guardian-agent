{
  "name": "intake-guardian-agent",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Intake-Guardian Agent v1.0 — deterministic intake→workitems with audit + dedupe (LLM-optional). Plugin-ready.",
  "scripts": {
    "dev": "NODE_ENV=development tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "db:init": "node dist/scripts/db-init.js",
    "smoke": "bash scripts/smoke.sh",
    "lint:types": "tsc -p tsconfig.json --noEmit",
    "smoke:day5": "bash scripts/smoke-day5.sh",
    "smoke:c": "bash scripts/smoke-c-ui.sh",
    "integrity:generate": "tsx scripts/integrity-generate.ts",
    "integrity:verify": "tsx scripts/verify-integrity.ts",
    "report:module": "tsx scripts/generate-completion-report.ts"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "better-sqlite3": "^11.8.1",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "multer": "^2.0.2",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.17.2",
    "pino": "^9.5.0",
    "svix": "^1.56.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.13",
    "@types/nodemailer": "^6.4.21",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  }
}
