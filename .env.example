PORT=7090
DATA_DIR=./data
DB_PATH=./data/guardian.sqlite
PRESET_ID=it_support.v1
DEDUPE_WINDOW_SECONDS=86400
WA_VERIFY_TOKEN=change_me

# Optional hardening
RESEND_WEBHOOK_SECRET=whsec_change_me
WA_APP_SECRET=change_me

# Hardening (Day-5)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# If true => reject requests when signature headers missing/invalid
ENFORCE_RESEND_SIG=false
ENFORCE_WA_SIG=false

# Signature secrets (optional, but recommended when enforce=true)
RESEND_WEBHOOK_SECRET=whsec_change_me
WA_APP_SECRET=change_me

# Timestamp / replay-ish guards
# Resend/Svix timestamp allowed drift (seconds)
RESEND_MAX_SKEW_SECONDS=300

# WhatsApp: enforce that message timestamp is not too old (seconds)
WA_MAX_AGE_SECONDS=600

# Tenant Keys (MVP hard gate)
# Map tenantId -> key (string). Example:
TENANT_KEYS_JSON={"tenant_demo":"dev_key_123"}

# V3: Admin key for tenant provisioning (required for /api/admin/tenants/*)
ADMIN_KEY=

# V3: SMTP (required for /api/outbound/email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=
EMAIL_TO=
